<%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
       <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image file <%= form.file_field :main_image, style: "display:none;" %>
        </label>
      </div>
       <div class="form-group">
        <label class="btn btn-primary">
           Upload a thumb image file <%= form.file_field :thumb_image, style: "display:none;"%>
         </label>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :youtube_url %>
      <%= form.text_field :youtube_url, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :url_link %>
        <%= form.text_field :url_link, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :source_url %>
      <%= form.text_field :source_url, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 15 %>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-12">
    <h3>Technologies used</h3>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
       <%= render 'technology_fields', f: technology_form %>
      <% end %>
      <div>
        <%= link_to_add_association 'Add Technology', form, :technologies %>
      </div>
    <div>

    <div class="form-group">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
